{
  "name": "website",
  "version": "1.0.0",
  "private": true,
  "description": "Personal site built with Dart, Angular, and Firebase",
  "bugs": "https://github.com/4cm4k1/website/issues",
  "license": "MIT",
  "author": "Anthony Maki <4cm4k1@gmail.com> (https://anthony.codes)",
  "contributors": ["Anthony Maki <4cm4k1@gmail.com> (https://anthony.codes)"],
  "main": "index.js",
  "repository": "https://github.com/4cm4k1/website",
  "scripts": {
    "alias": "now alias -A ./now.json -t $NOW_TOKEN",
    "br": "pub run build_runner build --output=build",
    "br-watch": "pub run build_runner watch --output=build",
    "build":
      "yarn run br && yarn run webpack && yarn run uglify && yarn run html-minify",
    "precommit": "yarn run remark && yarn run sort && pretty-quick --staged",
    "deploy": "now -t $NOW_TOKEN",
    "html-minify":
      "html-minifier -c .html-minifier.json -o build/web/index.html build/web/index.html",
    "now-build": "echo 'Starting app!'",
    "pub-get": "pub get --no-precompile",
    "pub-upgrade": "pub upgrade --no-precompile",
    "remark": "remark readme.md -o",
    "sort": "sort-package-json",
    "start": "node index.js",
    "prettier":
      "prettier '{*,{lib,test,web}/**/*}.{css,js,json,md,scss}' --write",
    "prettier-watch":
      "onchange '{*,{lib,test,web}/**/*}.{css,js,json,md,scss}' -- prettier --write {{changed}}",
    "uglify":
      "uglifyjs build/web/main.dart.js --mangle --compress --output build/web/main.dart.js",
    "watch":
      "concurrently \"yarn run prettier-watch\" \"yarn run br-watch\" \"yarn run webpack\" \"NODE_ENV=dev yarn run start\"",
    "webpack": "webpack"
  },
  "dependencies": {
    "shrink-ray": "^0.1.3",
    "superstatic": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.38",
    "@babel/preset-env": "^7.0.0-beta.38",
    "@firebase/app-types": "^0.1.1",
    "babel-loader": "^8.0.0-beta.0",
    "concurrently": "^3.5.1",
    "css-loader": "^0.28.9",
    "cssnano": "^3.10.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "firebase": "^4.9.0",
    "html-minifier": "^3.5.8",
    "husky": "^0.14.3",
    "node-env-webpack-plugin": "^1.1.0",
    "normalize.css": "^7.0.0",
    "onchange": "^3.3.0",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "prettier": "^1.10.2",
    "pretty-quick": "^1.2.2",
    "remark": "^8.0.0",
    "remark-cli": "^4.0.0",
    "remark-lint": "^6.0.1",
    "remark-preset-github": "^0.0.7",
    "sort-package-json": "^1.7.1",
    "style-loader": "^0.19.1",
    "uglify-js": "^3.3.7",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "webpack": "^3.10.0"
  },
  "engines": {
    "node": "9.x.x"
  },
  "remarkConfig": {
    "plugins": ["preset-github"]
  }
}
