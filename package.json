{
  "name": "website",
  "version": "0.0.1",
  "private": true,
  "description": "Personal site built with Dart, Angular, and Firebase",
  "bugs": "https://github.com/4cm4k1/website/issues",
  "repository": "https://github.com/4cm4k1/website",
  "license": "MIT",
  "author": "Anthony Maki (https://anthony.codes) <4cm4k1@gmail.com>",
  "contributors": [
    "Anthony Maki (https://anthony.codes) <4cm4k1@gmail.com>"
  ],
  "main": "index.js",
  "scripts": {
    "alias": "now alias -t $NOW_TOKEN",
    "br": "webdev build -o build",
    "br-watch": "webdev serve",
    "build": "yarn run br && yarn run html && yarn run json && yarn run svg && yarn run xml",
    "precommit": "pretty-quick --staged",
    "deploy": "now -t $NOW_TOKEN",
    "html": "html-minifier -c .html-minifier.json --input-dir build/web --output-dir build/web --file-ext html",
    "json": "html-minifier -c .html-minifier.json --input-dir build/web/assets --output-dir build/web/assets --file-ext json",
    "now-build": "echo 'Starting app!'",
    "pub-get": "pub get --no-precompile",
    "pub-upgrade": "pub upgrade --no-precompile",
    "remark": "remark . -o && git add '*.md'",
    "sort": "sort-package-json && git add package.json",
    "start": "node index.js",
    "svg": "html-minifier -c .html-minifier.json --input-dir build/web --output-dir build/web --file-ext svg",
    "prettier": "prettier '{*,{lib,test,web}/**/*}.{css,js,json,md,scss}' --write",
    "prettier-watch": "onchange '{*,{lib,test,web}/**/*}.{css,js,json,md,scss}' -- prettier --write {{changed}}",
    "watch": "NODE_ENV=dev npm-run-all prettier-watch br-watch start",
    "xml": "html-minifier -c .html-minifier.json --input-dir build/web --output-dir build/web --file-ext xml"
  },
  "dependencies": {
    "shrink-ray-current": "^2.1.0",
    "superstatic": "^5.0.1"
  },
  "devDependencies": {
    "html-minifier": "^3.5.16",
    "husky": "^0.14.3",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.0.0",
    "prettier": "^1.13.3",
    "pretty-quick": "^1.6.0",
    "remark": "^9.0.0",
    "remark-lint": "^6.0.1",
    "remark-preset-github": "^0.0.8",
    "sort-package-json": "^1.15.0"
  },
  "now": {
    "alias": "anthony.codes",
    "engines": {
      "node": "^9.0.0"
    },
    "env": {
      "NODE_ENV": "production"
    },
    "files": [
      "build",
      "index.js"
    ],
    "name": "anthony-codes",
    "public": true,
    "type": "npm"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  }
}
